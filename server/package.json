{
  "name": "socket-io-typescript-example",
  "version": "0.0.1",
  "description": "A socket.io example written in TypeScript",
  "main": "index.js",
  "author": "Luis Aviles",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts"
  },
  "dependencies": {
    "@types/express": "~4.0.36",
    "@types/socket.io": "^1.4.38",
    "express": "^4.16.3",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/socket.io-client": "^1.4.32",
    "gulp": "~3.9.1",
    "gulp-typescript": "~3.2.1",
    "jest": "^23.5.0",
    "socket.io-client": "^2.1.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "typescript": "~2.5.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.{ts,js}"
    ],
    "testEnvironment": "node"
  }
}
